<% content_for :title do %>Find out what coronavirus restrictions apply in your
area - GOV.UK <% end %> <% content_for :extra_headers do %>
<meta name="description" content="Find out what coronavirus restrictions apply in your area - GOV.UK" />
<% end %>
<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <main id="content" role="main" class="govuk-grid-column-two-thirds">

            <!-- TODO Does back button go on this section -->
            <%= render "govuk_publishing_components/components/back_link", { href: "#"} %>

            <div class="govuk-!-margin-top-8 govuk-!-margin-bottom-8">
                <% if @local_restrictions == "tier1" %>
                <%= render "govuk_publishing_components/components/title", title: "This area is in alert level 1" %>

                <p class="govuk-body">
                    <a class="govuk-link" href="#">Find out what you can and cannot do.</a>
                </p>

                <%= render "govuk_publishing_components/components/heading", {
                    text: "If you travel to other area",
                    heading_level: 3,
                    padding: true
                  } %>

                <p class="govuk-body">
                    <a class="govuk-link" href="#">Enter another postcode</a> to find out what restrictions there are.
                </p>

                <% elsif %>
                <%= render "govuk_publishing_components/components/title", title: "This area is in alert level 2" %>
                <% else %>
                <%= render "govuk_publishing_components/components/title", title: "This area is in alert level 3" %>
                <% end %>
            </div>

            <!-- TODO: This UI element / pattern - break and back link - is on the "find-my-council" but not on the design 

            <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

            <%= render "govuk_publishing_components/components/back_link", {
                href: "/find-local-council"
              } %>

              -->

