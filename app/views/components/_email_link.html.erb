<%
  title ||= nil
  link_text ||= "Sign up to emails"
  data_attributes ||= {}
  description ||= nil
  callout ||= nil
  css_classes = %w(app-c-email-link)
  css_classes << 'app-c-email-link--callout' if callout
%>
<%= tag.div class: css_classes do %>
  <% if title %>
    <%= render "govuk_publishing_components/components/heading", {
      text: title,
      font_size: "m",
      margin_bottom: 2
    } %>
  <% end %>
  <%= tag.p description, class: "govuk-body" if description %>
  <%= render "govuk_publishing_components/components/button", {
    text: link_text,
    href: link_href,
    data_attributes: data_attributes,
  } %>
<% end %>
